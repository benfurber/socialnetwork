<% if activity_resources_exist?(activity) %>
  <div id="activity-<%= activity.id %>" class="activity">

    <div class="activity-comment row">
      <div class="col-sm-2 col-avatar">
        <%= render 'shared/avatar', user: activity.owner %>
      </div>

      <div class="col-sm-10">
        <div class="info">
          <h4><%= link_to activity.owner.name, user_path(activity.owner) %> <span class="action">commented on a <%= link_to activity.trackable.commentable.class.to_s, activity.trackable.commentable %></span></h4>
          <%= render 'shared/created_at', activity: activity %>
        </div>
        <div class="content">
          <h4><small><%= activity.trackable.comment_html %></small></h4>
        </div>
      </div>

    </div>
  </div>
<% end %>
